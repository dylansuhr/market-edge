# Market-Edge Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection strings
# Format: postgresql://user:password@host:port/database

# Write access (for ETL, trading scripts)
DATABASE_URL=postgresql://user:password@localhost:5432/market_edge

# Read-only access (for dashboard)
DATABASE_READONLY_URL=postgresql://readonly_user:password@localhost:5432/market_edge

# ============================================================================
# ALPACA MARKET DATA API
# ============================================================================
# Sign up (free Basic plan) at: https://app.alpaca.markets
# Provides near real-time IEX data (200 calls/min, 10,000 calls/day), 5+ years history.
# Base URL defaults to https://data.alpaca.markets/v2 if APCA_DATA_BASE_URL unset.

APCA_API_KEY_ID=your_alpaca_key_id_here
APCA_API_SECRET_KEY=your_alpaca_secret_here
# Optional override (for paper/live environments)
# APCA_DATA_BASE_URL=https://data.alpaca.markets/v2

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================
# Stock symbols to trade (comma-separated)
SYMBOLS=AAPL,MSFT,GOOGL,TSLA,NVDA,SPY,QQQ,META,AMZN,JPM

# Intraday interval for price data
INTERVAL=5min

# Maximum shares per position
MAX_POSITION_SIZE=25

# Starting virtual capital for paper trading
STARTING_CASH=100000.00

# ============================================================================
# RL AGENT HYPERPARAMETERS
# ============================================================================
# Learning rate (alpha): How much to update Q-values
# Range: 0.0 - 1.0, Recommended: 0.1
LEARNING_RATE=0.1

# Discount factor (gamma): How much to value future rewards
# Range: 0.0 - 1.0, Recommended: 0.95
DISCOUNT_FACTOR=0.95

# Initial exploration rate (epsilon)
# Range: 0.0 - 1.0, Recommended: 1.0 (start with full exploration)
EXPLORATION_RATE=1.0

# Exploration decay rate
# Range: 0.0 - 1.0, Recommended: 0.995 (slow decay)
EXPLORATION_DECAY=0.995

# Minimum exploration rate
# Range: 0.0 - 1.0, Recommended: 0.01 (1% random actions)
MIN_EXPLORATION=0.01

# ============================================================================
# NEXT.JS DASHBOARD (optional overrides)
# ============================================================================
# Port for dashboard
PORT=3000

# Node environment
NODE_ENV=development
